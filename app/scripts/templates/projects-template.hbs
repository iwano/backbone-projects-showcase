<header class="card__header">
	<h1 class="card__title card__title--small">Projects Index</h1>
	<div class="card-controls card-controls--center">
		<div class="btn-group">
			<input type="radio" id="filter-all" name="radio" js-filter-all {{isFilterActive filter "all"}}/>
			<label for="filter-all" class="btn">View All</label>

			<input type="radio" id="filter-active" name="radio" js-filter-active {{isFilterActive filter "active"}}/>
			<label for="filter-active" class="btn">Active</label>

			<input type="radio" id="filter-inactive" name="radio" js-filter-inactive {{isFilterActive filter "inactive"}}/>
			<label for="filter-inactive" class="btn">Inactive</label>
		</div>
	</div>

	<ul class="card-controls card-controls--right">
		<li><a href="#" js-project-new class="btn btn--secondary">New Project</a></li>
	</ul>
</header>


<table class="table table--full-width" id="projects-list">
	<thead class="table__header">
		<th js-sort data-sort="name">Project Name {{{sortIndicator orderBy 'name' order}}}</th>
		<th js-sort class="td--hide-mobile" data-sort="owner">Owner: {{{sortIndicator orderBy 'owner' order}}}</th>
		<th js-sort class="td--hide-mobile" data-sort="end_date">Due: {{{sortIndicator orderBy 'end_date' order}}}</th>
		<th js-sort data-sort="total_steps">Steps {{{sortIndicator orderBy 'total_steps' order}}}</th>
		<th js-sort data-sort="active">Active: {{{sortIndicator orderBy 'active' order}}}</th>
	</thead>
	<tbody class="table__body">

	</tbody>
</table>
